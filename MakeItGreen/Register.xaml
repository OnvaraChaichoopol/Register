<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MakeItGreen.Register"
             BackgroundColor="White">
            
    <StackLayout Padding="20">
        <!--logo-->
        <Image Source="logo.png" HorizontalOptions="Center" HeightRequest="200"/>
        <!--สมัครสมาชิก-->
        <Label 
            Text="Sign Up" 
            HorizontalOptions="Center"
            FontSize="20"
            TextColor="#FF1F1F1F"
            Margin="0,20,0,10" />
        <Label Text="Username" FontSize="14" Margin="0,10,0,0"/>
        <Entry Placeholder="Username" x:Name="UsernameEntry" BackgroundColor="#F0F0E1"/>

        <Label Text="Email" FontSize="14" Margin="0,10,0,0"/>
        <Entry Placeholder="Email" x:Name="EmailEntry" Keyboard="Email" BackgroundColor="#F0F0E1"/>

        <Label Text="Passwords" FontSize="14" Margin="0,10,0,0"/>
        <Entry Placeholder="Passwords" x:Name="PasswordEntry" IsPassword="True" BackgroundColor="#F0F0E1"/>

        <Label Text="Phone Number" FontSize="14" Margin="0,10,0,0"/>
        <Entry Placeholder="Phone" x:Name="PhoneEntry" Keyboard="Telephone" BackgroundColor="#F0F0E1"/>
        <!--ยืนยัน-->
        <Button Text="Confirm" TextColor="White" BackgroundColor="#FF236F23" Clicked="OnRegisterClicked" Margin="0,10,0,0"/>


    </StackLayout>
</ContentPage>